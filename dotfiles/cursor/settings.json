{
    // Editor
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "terminal.integrated.stickyScroll.enabled": true,
    "editor.wordWrap": "on",
    "editor.inlayHints.enabled": "on",
    "editor.inlineSuggest.enabled": true,
    // File explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // Terminal
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.fontFamily": "MesloLGS NF", // this is installed with p10k
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    // Formatting
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    // turn this off for now?
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "prettier.tabWidth": 4,
    // Security
    "security.workspace.trust.untrustedFiles": "open",
    // Git
    "git.autofetch": true,
    // Language-specific

    // Python
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
        // "editor.codeActionsOnSave": {
        //     "source.organizeImports": "explicit", // ruff needs this
        //     "source.fixAll": "explicit" // maybe try this out later?
        // }
    },
    // "isort.args": ["--profile", "black"], // no longer needed?
    "python.createEnvironment.trigger": "off",
    "python.defaultInterpreterPath": "/Users/gilfordting/Documents/dev/.pyenv/bin/python",
    "python.terminal.activateEnvironment": false,
    "python-envs.terminal.autoActivationType": "off",
    "python.analysis.autoImportCompletions": true,
    // Jupyter notebooks
    "notebook.formatOnSave.enabled": true,
    "notebook.output.scrolling": true,
    "notebook.output.wordWrap": true,
    "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
    // Verilog
    "[systemverilog]": {
        "editor.defaultFormatter": "mshr-h.veriloghdl"
    },
    "verilog.linting.linter": "iverilog",
    "verilog.linting.iverilog.arguments": "-i -g2012",
    // C/C++
    "[c][cpp]": {
        "editor.formatOnSaveMode": "modifications"
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.tabSize": 2
    },
    "[cuda-cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": false
    },
    "C_Cpp.default.includePath": ["/opt/cuda-12.8-headers/include"],
    "C_Cpp.default.defines": ["__CUDACC__"],
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4 }",
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    // Go
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "gopls": { "ui.semanticTokens": true },
    "go.toolsManagement.autoUpdate": true,
    // JS/TS
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Rust
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    "files.readonlyInclude": {
        "**/.cargo/registry/src/**/*.rs": true,
        "**/lib/rustlib/src/rust/library/**/*.rs": true
    },
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.checkOnSave": true,
    // Other languages
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "[jsonnet]": {
        "editor.defaultFormatter": "Grafana.vscode-jsonnet"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    // needs older version of shell formatter
    "shellformat.path": "/opt/homebrew/bin/shfmt",
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[properties]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[ignore]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    

    "makefile.configureOnOpen": true,
    "cmake.configureOnOpen": true,
    "files.associations": {
        "*.ms": "BluespecSystemVerilog",
        "*.catsoop": "markdown",
        "*.h": "c",
        "string_view": "c"
    },
    "claudeCode.preferredLocation": "panel",
    "window.commandCenter": true,
    "cursorpyright.analysis.autoImportCompletions": true
}
